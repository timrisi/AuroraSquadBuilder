<?xml version="1.0" encoding="utf-8" ?>
<local:BaseView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SquadBuilder.ReferenceCardView"
             xmlns:local="clr-namespace:SquadBuilder;assembly=SquadBuilder"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="true"
			 Title="{Binding Title}"
			 Padding="10">
	<local:BaseView.Content>
		<local:HtmlLabel Text="{Binding Card.Text}" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand" />
	</local:BaseView.Content>
</local:BaseView>
